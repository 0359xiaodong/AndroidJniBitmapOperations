<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- original -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="original"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <!-- rotated 90 degrees CCW -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotated 90 degrees CCW"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewRotated90degreesCcw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <!-- rotated 90 degrees CW -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotated 90 degrees CW"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewRotated90degreesCw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <!-- rotated 180 degrees -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotated 180 degrees"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewRotated180degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <!-- cropped -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cropped"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewCropped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <!-- scaled -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scaled"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageViewScaled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</ScrollView>